        <single>a cura di</single>
        <multiple>a cura di</multiple>
      </term>
      <term name="editor" form="short">a cura di</term>
      <term name="collection-editor" form="verb">a cura di</term>
      <term name="collection-editor" form="short">a cura di</term>
      <term name="circa" form="long">circa</term>
      <term name="circa" form="short">ca.</term>
      <term name="no date" form="short">s.d.</term>
      <term name="no date" form="long">senza data</term>
      <!-- gli et al messi come stringa vuota servono in bibliografia per poter citare i nomi delle opere fino a 3 autori senza ammattire troppo-->
      <term name="et-al" form="long"/>
      <term name="et-al" form="short"/>
      <term name="translator" form="short">
        <single>trad. di</single>
        <multiple>trad. di</multiple>
      </term>
      <term name="volume" form="short">
        <single>vol.</single>
        <multiple>voll.</multiple>
      </term>
      <term name="volume" form="long">
        <single>volume</single>
