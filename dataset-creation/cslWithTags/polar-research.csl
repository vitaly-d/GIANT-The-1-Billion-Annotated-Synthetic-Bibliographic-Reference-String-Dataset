    <link href="https://polarresearch.net/index.php/polar/author" rel="documentation"/>
    <author>
      <name>Patrick O'Brien</name>
    </author>
    <category citation-format="author-date"/>
    <category field="geography"/>
    <issn>0800-0395</issn>
